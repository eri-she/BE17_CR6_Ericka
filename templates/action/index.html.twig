{% extends 'base.html.twig' %}
{% block body %}
<h1 class="text-center mt-3" >All Our Events ðŸŽŸ</h1>
<div class="container row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
{%for event in events%}
<div class=" col card mt-2 mx-3">
  <div class="card-body">
    <h5 class="card-title text-danger">{{event.title}}</h5>
    <p class="card-text">Type: {{event.type}}</p>
      <p class="card-text"> Date:{{event.date | date("d M.Y")}}</p>
    <a href="/details/{{event.id}}" class="btn btn-dark">View</a>
    <a href="/edit/{{event.id}}" class="btn btn-primary">Edit</a>
    <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>

  </div>
</div>

{% endfor %}
</div>
{% endblock %}
